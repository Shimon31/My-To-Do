<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".loginOrSignUpFragment">


    <LinearLayout
        android:id="@+id/linearLoginOrSignUp"
        style="@style/groupStyle_rectangle_bg_name_gray_50_01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/btnArrowLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_border_name_black_900_radius_7"
                android:paddingHorizontal="@dimen/_6pxh"
                android:paddingVertical="@dimen/_6pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_arrow_left"
                tools:ignore="ContentDescription" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/linearThirtyFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_32pxh"
            android:paddingTop="@dimen/_25pxv"
            android:paddingEnd="@dimen/_32pxh"
            android:paddingBottom="@dimen/_25pxv">

            <LinearLayout
                android:id="@+id/linearPageHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtWelcometoourcommunity"
                    style="@style/txtPoppinsbold34"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/_6pxh"
                    android:text="@string/msg_welcome_to_our_community" />

                <TextView
                    android:id="@+id/txtOurCommunityIs"
                    style="@style/txtPoppinsregular12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.01"
                    android:layout_marginBottom="20dp"
                    android:lineSpacingExtra="@dimen/_8pxh"
                    android:text="@string/msg_our_community_is" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="@dimen/_117pxh"
                android:layout_height="@dimen/_105pxh"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:layout_marginBottom="20dp"
                android:src="@drawable/img_logo_gray_50_01"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_logo_gray_50_01" />

            <TextView
                android:id="@+id/txtGetInThrough"
                style="@style/txtPoppinssemibold18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginBottom="20dp"
                android:text="@string/lbl_get_in_through" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSignUp"
                android:layout_width="@dimen/_311pxh"
                android:layout_height="@dimen/_60pxv"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rectangle_bg_name_primary_radius_14"
                android:ellipsize="end"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_19pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_19pxv"
                android:singleLine="true"

                android:textAllCaps="false"
                android:textColor="@color/white_A700"
                android:textFontWeight="500"
                android:textSize="@dimen/_14pxh"
                android:textStyle="bold"
                android:text="@string/lbl_sign_up" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogin"
                android:layout_width="@dimen/_311pxh"
                android:layout_height="@dimen/_60pxv"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rectangle_bg_name_deep_orange_50_radius_14"
                android:ellipsize="end"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_19pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_19pxv"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/secondaryContainer"
                android:textFontWeight="500"
                android:textSize="@dimen/_14pxh"
                android:textStyle="bold"
                android:text="@string/lbl_login" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
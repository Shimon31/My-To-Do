<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    tools:context=".WorkTodayFragment">

    <LinearLayout
        android:id="@+id/linearWorkToday"
        style="@style/groupStyle_white_a700"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            app:contentInsetStart="0dp">

            <ImageButton
                android:id="@+id/btnArrowLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_border_name_black_900_radius_7"
                android:scaleType="fitCenter"
                android:src="@drawable/img_arrow_left_black_900"
                tools:ignore="ContentDescription" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/linearFortyOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_32pxh"
            android:paddingTop="@dimen/_63pxv"
            android:paddingEnd="@dimen/_32pxh">

            <LinearLayout
                android:id="@+id/linearPageHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtMakeAWishList"
                    style="@style/txtPoppinssemibold28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/_14pxh"
                    android:singleLine="true"
                    android:text="@string/lbl_work_today_s2" />

                <TextView
                    android:id="@+id/txtMakeYourJobEasier"
                    style="@style/txtPoppinsmedium12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="@dimen/_6pxh"
                    android:singleLine="true"
                    android:text="@string/msg_make_your_job_easier" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearDate"
                android:layout_width="321dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearDate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtToday"
                        style="@style/txtPoppinsmedium14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_today" />

                    <TextView
                        android:id="@+id/txtDate"
                        style="@style/txtPoppinssemibold16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_02_april_2021" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnCalendar"
                    android:layout_width="@dimen/_60pxh"
                    android:layout_height="@dimen/_58pxh"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="120dp"
                    android:background="@drawable/rectangle_bg_name_gray_50_02_radius_14"
                    android:paddingHorizontal="@dimen/_17pxh"
                    android:paddingVertical="@dimen/_17pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_calendar"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearTodoWorkItem"
                style="@style/groupStyle_white_a700"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_27pxh"
                android:paddingTop="@dimen/_15pxv"
                android:paddingEnd="@dimen/_27pxh"
                android:paddingBottom="@dimen/_15pxv">

                <View
                    android:id="@+id/viewStatusColor"
                    android:layout_width="@dimen/_28pxh"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rectangle_bg_name_secondarycontainer_opacity_0_2_radius_6" />

                <TextView
                    android:id="@+id/txtResearchProduct"
                    style="@style/txtPoppinsregular14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/msg_research_product" />

                <FrameLayout
                    android:id="@+id/frameSpacer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/imageArrowIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_arrow_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearTodoWorkItem1"
                style="@style/groupStyle_white_a700"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_27pxh"
                android:paddingTop="@dimen/_15pxv"
                android:paddingEnd="@dimen/_27pxh"
                android:paddingBottom="@dimen/_15pxv">

                <View
                    android:id="@+id/viewStatusColor1"
                    android:layout_width="22dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rectangle_bg_name_secondarycontainer_opacity_0_2_radius_6" />

                <TextView
                    android:id="@+id/txtResearchProduct1"
                    style="@style/txtPoppinsregular14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/msg_create_action_plan" />

                <FrameLayout
                    android:id="@+id/frameSpacer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/imageArrowIcon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_arrow_icon"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMakeAWishList"
                android:layout_width="@dimen/_311pxh"
                android:layout_height="@dimen/_60pxv"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rectangle_bg_name_primary_radius_14"
                android:ellipsize="end"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_18pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_18pxv"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/white_A700"
                android:textFontWeight="600"
                android:textSize="@dimen/_16pxh"
                android:textStyle="bold"
                android:text="@string/msg_make_a_wish_list" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>